{
  "compilerOptions": {
    "lib": ["ES2024"],
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "src/handlers/test.handler.ts", "prisma.config.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
