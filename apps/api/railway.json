{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm --filter @repo/database db:generate && pnpm --filter @repo/database db:deploy && pnpm build:api"
  },
  "deploy": {
    "startCommand": "pnpm start:api",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "watch": ["apps/api/**", "packages/database/**"]
}
