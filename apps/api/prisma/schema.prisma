generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
  UNISEX
  KIDS
}

model Item {
  id          String      @id @default(uuid())
  name        String
  description String
  latestPrice Int
  link        String
  brand       Brand       @relation(fields: [brandId], references: [id])
  brandId     String
  material    Material?   @relation(fields: [materialId], references: [id])
  materialId  String?
  gender      Gender?
  deletedAt   DateTime?
  inTrash     Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  categories  Category[]
  colors      Color[]
  images      Image[]
  sizes       Size[]
  prices      Price[]
  viewedBy    User[]      @relation("History")
  likedBy     User[]      @relation("Likes")
  CartItem    CartItem[]
  OrderItem   OrderItem[]
}

model Price {
  id        String   @id @default(uuid())
  price     Int
  createdAt DateTime @default(now())
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId    String
}

model Brand {
  id       String     @id @default(uuid())
  name     String     @unique
  showroom Showroom[]
  Item     Item[]
}

model Showroom {
  id    String  @id @default(uuid())
  name  String
  brand Brand[]
}

model Category {
  id   String @id @default(uuid())
  name String @unique
  Item Item[]
}

model Color {
  id        String      @id @default(uuid())
  name      String
  Item      Item[]
  OrderItem OrderItem[]
  CartItem  CartItem[]
}

// TODO
// a way to specify a primary/thumbnail image for an item.
model Image {
  id     String @id @default(uuid())
  url    String
  Item   Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId String
}

model Size {
  id        String      @id @default(uuid())
  name      String
  available Boolean     @default(true)
  Item      Item        @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId    String
  CartItem  CartItem[]
  OrderItem OrderItem[]
}

model Material {
  id   String @id @default(uuid())
  name String
  Item Item[]
}

model Applicant {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String
  whyYou    String
  whyLoom   String
  createdAt DateTime @default(now())
}

enum NewsletterType {
  CAREERS
  NEWSLETTER
}

model Newsletter {
  id        String         @id @default(uuid())
  email     String
  type      NewsletterType @default(NEWSLETTER)
  createdAt DateTime       @default(now())
}

model Trash {
  id   String @id @default(uuid())
  link String
}

model User {
  id                String     @id @default(uuid())
  email             String     @unique
  password          String
  username          String     @unique
  isEmailConfirmed  Boolean    @default(false)
  firstName         String?
  lastName          String?
  phoneNumber       String?
  history           Item[]     @relation("History")
  likes             Item[]     @relation("Likes")
  CartItem          CartItem[]
  orders            Order[]
  addresses         Address[]
  confirmationToken String?
  tokenExpiresAt    DateTime?
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  @@index([email])
}

model Address {
  id          String   @id @default(uuid())
  firstName   String
  lastName    String
  company     String?
  address     String
  apartment   String?
  city        String
  governorate String
  country     String   @default("Egypt")
  postalCode  String?
  createdAt   DateTime @default(now())
  orders      Order[]
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
}

model CartItem {
  id        String   @id @default(uuid())
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId    String
  quantity  Int      @default(1)
  size      Size     @relation(fields: [sizeId], references: [id])
  sizeId    String
  color     Color?   @relation(fields: [colorId], references: [id])
  colorId   String?
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// these entities are created after user clicks checkout.
model Order {
  id          String      @id @default(uuid())
  orderNumber String      @unique
  orderItems  OrderItem[]
  // shipping + prices
  orderTotal  Int
  status      OrderStatus @default(PENDING)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  // user associated data
  // but what if someone wants to order again with a different email or phone number for this specific order. also a user could have multiple addresses but we need to associate that order with just one address.
  email       String
  phoneNumber String
  address     Address     @relation(fields: [addressId], references: [id])
  addressId   String

  @@index([orderNumber, status])
}

model OrderItem {
  id                 String           @id @default(uuid())
  order              Order            @relation(fields: [orderId], references: [id])
  orderId            String
  item               Item             @relation(fields: [itemId], references: [id])
  itemId             String
  quantity           Int              @default(1)
  name               String
  image              String
  price              Int
  size               Size             @relation(fields: [sizeId], references: [id])
  sizeId             String
  color              Color?           @relation(fields: [colorId], references: [id])
  colorId            String?
  shippingEstimate   ShippingEstimate @relation(fields: [shippingEstimateId], references: [id], onDelete: Cascade)
  shippingEstimateId String
}

model ShippingEstimate {
  id        String      @id @default(uuid())
  cost      Int
  OrderItem OrderItem[]
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}
