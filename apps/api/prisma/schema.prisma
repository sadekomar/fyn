generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
  UNISEX
  KIDS
}

model Item {
  id          String      @id @default(uuid())
  name        String
  description String
  latestPrice Int
  link        String
  brand       Brand       @relation(fields: [brandId], references: [id])
  brandId     String
  material    Material?   @relation(fields: [materialId], references: [id])
  materialId  String?
  gender      Gender?
  deletedAt   DateTime?
  inTrash     Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  categories  Category[]
  colors      Color[]
  images      Image[]
  sizes       Size[]
  prices      Price[]
  views       ItemView[]
  likes       Like[]
  carts       ItemCart[]
  orders      ItemOrder[]
}

model ItemView {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId    String
  createdAt DateTime @default(now())
}

model CategoryView {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String
  createdAt  DateTime @default(now())
}

model BrandView {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  brand     Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  brandId   String
  createdAt DateTime @default(now())
}

model Like {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId    String
  createdAt DateTime @default(now())
}

model Price {
  id        String   @id @default(uuid())
  price     Int
  createdAt DateTime @default(now())
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId    String
}

model Brand {
  id         String      @id @default(uuid())
  name       String      @unique
  items      Item[]
  brandViews BrandView[]
  showrooms  Showroom[]
}

model Showroom {
  id     String  @id @default(uuid())
  name   String
  brands Brand[]
}

model Category {
  id           String         @id @default(uuid())
  name         String         @unique
  Item         Item[]
  CategoryView CategoryView[]
}

model Color {
  id         String      @id @default(uuid())
  name       String
  items      Item[]
  itemOrders ItemOrder[]
  itemCarts  ItemCart[]
}

// TODO
// a way to specify a primary/thumbnail image for an item.
model Image {
  id     String @id @default(uuid())
  url    String
  Item   Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId String
}

model Size {
  id         String      @id @default(uuid())
  name       String
  available  Boolean     @default(true)
  Item       Item        @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId     String
  itemCarts  ItemCart[]
  itemOrders ItemOrder[]
}

model Material {
  id    String @id @default(uuid())
  name  String
  items Item[]
}

enum ApplicantStatus {
  PENDING
  EMAIL_SENT
  ONLINE_INTERVIEW_SCHEDULED
  ONLINE_INTERVIEW_COMPLETED
  IN_PERSON_INTERVIEW_SCHEDULED
  IN_PERSON_INTERVIEW_COMPLETED
  HIRED
  REJECTED
}

model Applicant {
  id        String          @id @default(uuid())
  name      String
  email     String
  phone     String
  whyYou    String
  whyLoom   String
  createdAt DateTime        @default(now())
  status    ApplicantStatus @default(PENDING)
}

enum NewsletterType {
  CAREERS
  NEWSLETTER
}

model Newsletter {
  id        String         @id @default(uuid())
  email     String
  type      NewsletterType @default(NEWSLETTER)
  createdAt DateTime       @default(now())
}

model Trash {
  id   String @id @default(uuid())
  link String
}

model User {
  id                String         @id @default(uuid())
  email             String         @unique
  password          String
  username          String         @unique
  isEmailConfirmed  Boolean        @default(false)
  firstName         String?
  lastName          String?
  phoneNumber       String?
  itemViews         ItemView[]
  categoryViews     CategoryView[]
  brandViews        BrandView[]
  likes             Like[]
  itemCarts         ItemCart[]
  orders            Order[]
  addresses         Address[]
  confirmationToken String?
  tokenExpiresAt    DateTime?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  @@index([email])
}

model Address {
  id          String   @id @default(uuid())
  firstName   String
  lastName    String
  company     String?
  address     String
  apartment   String?
  city        String
  governorate String
  country     String   @default("Egypt")
  postalCode  String?
  createdAt   DateTime @default(now())
  orders      Order[]
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
}

model ItemCart {
  id        String   @id @default(uuid())
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId    String
  quantity  Int      @default(1)
  size      Size     @relation(fields: [sizeId], references: [id])
  sizeId    String
  color     Color?   @relation(fields: [colorId], references: [id])
  colorId   String?
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// these entities are created after user clicks checkout.
model Order {
  id          String      @id @default(uuid())
  orderNumber String      @unique
  items       ItemOrder[]
  // shipping + prices
  orderTotal  Int
  status      OrderStatus @default(PENDING)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  // user associated data
  // but what if someone wants to order again with a different email or phone number for this specific order. also a user could have multiple addresses but we need to associate that order with just one address.
  email       String
  phoneNumber String
  address     Address     @relation(fields: [addressId], references: [id])
  addressId   String

  @@index([orderNumber, status])
}

model ItemOrder {
  id                 String           @id @default(uuid())
  order              Order            @relation(fields: [orderId], references: [id])
  orderId            String
  item               Item             @relation(fields: [itemId], references: [id])
  itemId             String
  quantity           Int              @default(1)
  name               String
  image              String
  price              Int
  size               Size             @relation(fields: [sizeId], references: [id])
  sizeId             String
  color              Color?           @relation(fields: [colorId], references: [id])
  colorId            String?
  shippingEstimate   ShippingEstimate @relation(fields: [shippingEstimateId], references: [id], onDelete: Cascade)
  shippingEstimateId String
}

model ShippingEstimate {
  id         String      @id @default(uuid())
  cost       Int
  itemOrders ItemOrder[]
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}
